<?php

/**
 * @file
 * Primary module hooks for farmOS Cool Farm Platform module.
 */

use Drupal\Core\Entity\EntityTypeInterface;

/**
 * Implements hook_farm_entity_bundle_field_info().
 */
function farm_cfp_farm_entity_bundle_field_info(EntityTypeInterface $entity_type, $bundle) {
  $fields = [];

  if ($entity_type->id() == 'log' && $bundle == 'calculation') {
    $options = [
      'type' => 'integer',
      'label' => t('Assessment year'),
      'min' => 1980,
      'max' => 2100,
    ];
    $fields['calculation_year'] = \Drupal::service('farm_field.factory')->bundleFieldDefinition($options);
  }

  return $fields;
}
